{
  "version": 2,
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "apps/backend_api/",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/backend_api/main.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)", "dest": "apps/web/$1"
    }
  ]
} 